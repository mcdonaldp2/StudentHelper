<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.helper.groupa.studenthelper.GPAActivity">
    <LinearLayout
        android:id="@+id/gpaTextViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="GPA: "
            android:id="@+id/gpaTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gpa"
            android:id="@+id/gpaDecimalTextView"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/gpaTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal GPA: "
            android:id="@+id/goalGPATextView"
            android:layout_marginLeft="20dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goalgpa"
            android:id="@+id/goalGpaDecimalTextView"
            android:layout_alignTop="@+id/goalGPATextView"
            android:layout_toEndOf="@+id/goalGPATextView" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gpaTextViewLayout"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Semester"
            android:id="@+id/addSemesterButton"
            android:layout_marginTop="28dp"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gpaListView"
        android:layout_below="@id/buttonLayout">

    </ListView>




</RelativeLayout>
