<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.helper.groupa.studenthelper.Calendar.ScheduleDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Class Name:"
        android:id="@+id/detailsName"
        android:layout_marginTop="101dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Time:"
        android:id="@+id/detailsStartTime"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/detailsDay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Time:"
        android:id="@+id/detailsEndTime"
        android:layout_below="@+id/detailsDay"
        android:layout_alignEnd="@+id/detailsStartTime"
        android:layout_marginTop="105dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/detailsNameOutput"
        android:width="120dp"
        android:layout_alignTop="@+id/detailsName"
        android:layout_toEndOf="@+id/updateStartTimeButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/detailsDaysOutput"
        android:width="150dp"
        android:layout_below="@+id/detailsNameOutput"
        android:layout_alignStart="@+id/detailsNameOutput"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/detailsStartTimeOutput"
        android:width="120dp"
        android:layout_alignTop="@+id/detailsStartTime"
        android:layout_alignStart="@+id/detailsDaysOutput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/detailsEndTimeOutput"
        android:width="120dp"
        android:layout_alignTop="@+id/detailsEndTime"
        android:layout_alignStart="@+id/detailsStartTimeOutput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/updateStartTimeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/detailsEndTime"
        android:layout_marginBottom="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/detailsDeleteButton"
        android:layout_alignTop="@+id/updateStartTimeButton"
        android:layout_toEndOf="@+id/updateStartTimeButton"
        android:layout_marginStart="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Days:"
        android:id="@+id/detailsDay"
        android:layout_alignTop="@+id/detailsDaysOutput"
        android:layout_alignEnd="@+id/detailsName" />
</RelativeLayout>
